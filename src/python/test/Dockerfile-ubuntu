# Create a Docker image that is ready to run the main Checker Framework tests,
# using JDK 11.

# "ubuntu" is the latest LTS release.  "ubuntu:rolling" is the latest release.
FROM ubuntu
MAINTAINER Michael Ernst <mernst@cs.washington.edu>

# According to
# https://docs.docker.com/engine/userguide/eng-image/dockerfile_best-practices/:
#  * Put "apt-get update" and "apt-get install" and "apt cleanup" in the same RUN command.
#  * Do not run "apt-get upgrade"; instead get upstream to update.

RUN export DEBIAN_FRONTEND=noninteractive \
&& apt-get -qqy update \
&& apt-get -y install aptitude \
&& aptitude -y install \
  apt-utils

RUN export DEBIAN_FRONTEND=noninteractive \
&& apt-get -qqy update \
&& aptitude -y install \
  openjdk-11-jdk \
  openjdk-8-jdk

# gcc is required to run `cpanm --installdeps .` below.
RUN export DEBIAN_FRONTEND=noninteractive \
&& apt-get -qqy update \
&& aptitude -y install \
  cpanminus \
  gcc \
  git \
  graphviz \
  subversion \
  wget

RUN export DEBIAN_FRONTEND=noninteractive \
&& export PARALLEL_DEB=parallel_20230622_all.deb \
&& wget --no-verbose https://download.opensuse.org/repositories/home:/tange/xUbuntu_22.04/all/${PARALLEL_DEB} \
&& dpkg -i ${PARALLEL_DEB} \
&& mkdir ${HOME}/.parallel \
&& touch ${HOME}/.parallel will-cite

RUN export DEBIAN_FRONTEND=noninteractive \
&& git clone --depth 1 https://github.com/rjust/defects4j \
&& cd defects4j \
&& cpanm --installdeps . \
&& ./init.sh

RUN export DEBIAN_FRONTEND=noninteractive \
&& apt-get autoremove \
&& apt-get clean \
&& rm -rf /var/lib/apt/lists/*


# export PATH=$PATH:$HOME/defects4j/framework/bin
